//BIBLIOTECAS
#include<stdio.h>
#include<stdlib.h>
#include<locale.h>


//DECLARAÇÃO DE FUNÇÕES
int verpilha(char *vetor, int y);


//CORPO DO PROGRAMA
int main(){

	setlocale(LC_ALL,"Portuguese");	
	
	int i, num, diamantes=0;
	char *vet, *vetpilha;
	
	printf("Insira o número de espaços do vetor:");
	scanf("%d",&num);
	
	vet = (char*)malloc(num*sizeof(char));
	vetpilha = (char*)malloc(num*sizeof(char));
	
	for(i=0;i<num;i++){
		printf("Insira o símbolo do espaço %d: ",i+1);
		scanf("%s",&vet[i]);
	}
	
	for(i=0;i<num;i++){
		
		if(vet[i] == '<'){
			vetpilha[i]='<';
		}
		
		if(vet[i] == '>'){
			if (verpilha(vetpilha, num) == 1){
				diamantes++;
			}
		}
	}
	
	printf("\nNúmero de diamantes: %d\n", diamantes);
	
	system("pause");
	return 0;
}



//FUNÇÃO QUE VERIFICA SE HÁ ELEMENTOS NA PILHA PARA COMBINAÇÃO
int verpilha(char* vetor, int y){

	int x;
	for(x=0;x<y;x++){
		if(vetor[x]=='<'){
			vetor[x]=0;
			return 1;
		}else{
		}	
	}
	return -1;
}
