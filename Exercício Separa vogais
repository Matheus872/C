#include <stdio.h>
#include <string.h>

int main(){

	char nome[50], cons[50], vogais[50], c;
	int i, j = 0, k = 0, tam, tj, tk;

	printf("Digite um nome (somente letras minusculas): ");
	fgets(nome, 50, stdin);

	tam = strlen(nome);

	for(i=0; i<tam ; i++){		
		c = nome[i];
		if(c != ' '){
			if(c =='a' || c=='e' || c=='i' || c=='o' || c=='u'){			
				vogais[j] = c; 
				j = j+1;						
			}
			else{
				cons[k] = c;
				k = k+1;	
			}
		}
	}

	tj = j;
	tk = k;
	
	printf("\nVOGAIS: ");
	for(j=0; j < tj; j++){
		printf("- %c ", vogais[j]);
	}
	printf("\n\nCONSOANTES: ");
	for(k=0; k < tk; k++){
		printf("- %c ", cons[k]);
	}

	return 0;
}
